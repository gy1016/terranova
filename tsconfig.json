{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "outDir": "./dist",
    "baseUrl": ".",
    "skipDefaultLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "exclude": ["node_modules", "types"]
}
